@inherits RazorTemplateBase

<h1>@Raw(Model.Doc.Attribute("MemberName").Value)</h1>

@Html.RenderPartial(Templates.Summary)
@Html.RenderPartial(Templates.Remarks)

<ul>
@foreach(var p in Model.MemberParameters) {
        var name = p.Attribute("Name").Value;
        var type = p.Attribute("Type").Value;
        var parameterRemarks = Model.ParameterRemarks(name);

        <li>
                <span>@name</span>
                @type
                <blockquote>@Raw(parameterRemarks)</blockquote>
        </li>
}
</ul>